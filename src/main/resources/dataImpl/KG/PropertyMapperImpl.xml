    <insert id="insert" parameterType="com.example.demo.po.PropertyPo" useGeneratedKeys="true" keyProperty="recordId">
        insert into nkg.property(recordId,id,nameEn,nameCn,domain,`range`,`from`,comment) values(#{recordId},#{id},#{nameEn},#{nameCn},#{domain},#{range},#{from},#{comment})
    </insert>

<!--    <delete id="delJack">-->
<!--        delete from JackList where id = #{id}-->
<!--    </delete>-->

    <select id="searchByKeywords" resultMap="PropertyPo">
        select * from nkg.property where id like "%${keywords}%" or nameCn like "%${keywords}%" or nameEn like "%${keywords}%"
    </select>

    <select id="getByRecordId" resultMap="PropertyPo">
        select * from nkg.property where recordId = #{recordId}
    </select>

    <delete id="deleteById">
        delete from nkg.property WHERE id =#{id}
    </delete>

